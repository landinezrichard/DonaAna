/*MENU*/
.Menu
	display none	
	vertical-align middle
	float right
	width 100%
	
	&-btn
		float right
		vertical-align middle
		display table
		height 72px
		margin 8px 12px
		
		& .icon-menu
			display table-cell
			vertical-align middle
			font-size 2em
			color $turquesa
			cursor pointer
	
	&-list		
		list-style-type none
		margin 0
		padding 0
		display: inline-block;
		width 99%
		// height 80vh
		background $naranja1
		
	&-item		
		width 100%
		height 2.5em
		line-height 2.5em
	
	&-link
		color white
		font-family:"Simplicity";
		font-size 1.37em
		font-weight 500
		display inline-block
		width 100%
		cursor pointer
		transition all .3s ease
		
		&:hover
			color $verde
			font-weight 600


@media screen and (min-width:840px)
	.Menu
		display inline-block !important
		width auto
		
		&-btn
			display none

		&-list
			display flex
			height 94px
			align-items center
			background transparent
		&-item
			display inline-block
			vertical-align middle
			margin 0 18px
			height auto
			line-height normal
			
			&:nth-child(2)
				width 64px
			&:nth-child(3)
				width 136px
			&:last-child
				margin-right 10px
		&-link
			color $naranja1
			
@media screen and (min-width:960px)
	.Menu
		&-item
			margin 0 25px
			
@media screen and (min-width:1100px)
	.Menu
		&-item			
			margin 0 25px
			&:last-child
				margin-right 0