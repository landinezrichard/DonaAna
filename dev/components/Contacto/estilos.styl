/*CONTACTO*/

.Contacto
	width 100%
	background $light_gray
	padding 32px 0 40px
	
	& form
		text-align justify
		display inline-block		
		margin 0 2.5%
		
	& fieldset
		margin 9px 0
		padding 0
		border none
	
	& input
		display inline-block		
		width 100%
		// max-width 378px
		height 50px
		padding .2em
		box-sizing border-box
		vertical-align middle
		font-weight 400
		font-family:"MyriadPro";
		font-size 1.87em
	
	& textarea
		display inline-block
		width 100%
		height 138px
		max-width 500px
		box-sizing border-box
		
	&-btnContainer
		text-align right
	
	&-btn
		display inline-block
		cursor pointer
		width 250px
		height 48px
		box-sizing border-box
		vertical-align middle
		border 3px solid $naranja1
		text-align center
		margin 5px 32px
		
		& .icon-mail
			width 102px
			height 42px
			color white
			background $naranja1
			line-height 48px
			float right
			font-size 2em
			display inline-block
			vertical-align middle
		
	&-btnTxt
		display inline-block
		width 142px
		height 42px
		vertical-align middle
		color $naranja1
		background white
		font-family:"MyriadProC";
		font-size 2.4em
		line-height 48px
		
		
.input-label
	display block	
	font-weight 400
	font-family:"MyriadPro";
	font-size 1.87em
	vertical-align middle
		
.textarea-label
	display block	
	font-weight 400
	font-family:"MyriadPro";
	font-size 1.87em
	vertical-align middle

@media screen and (min-width:960px)
	.Contacto
		& .u-halfColumn:first-child
			width 50%
			margin-right 2.5%
	
	.input-label
		display inline-block
		width 116px
		
@media screen and (min-width:1100px)
	.Contacto
		& form
			width 100%
			margin 0
		& input
			max-width 378px