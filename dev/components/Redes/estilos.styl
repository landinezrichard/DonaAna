/*REDES*/

.Redes
	display none
	position fixed
	top 40%
	right 0
	text-align center
	
	&-link
		display block
		border-radius 50%
		background $turquesa
		color white
		width 50px
		height 50px
		line-height 50px
		cursor pointer
		margin 7px 5px
		
		& span
			font-size 1.75em
			vertical-align middle
			
		& span.icon-instagram2
			font-size 2em
			
@media screen and (min-width:600px)
	.Redes
		display inline-block