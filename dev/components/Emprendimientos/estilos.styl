/*EMPRENDIMIENTOS*/

.Empre

	/*Slider "index"*/

	&-slide
		width 100%

	&-slideItem
		display inline-block
		width 308px
		height 320px
		text-align center
		margin 2px
		vertical-align middle
		cursor pointer
	&-title
		font-weight 700
		font-size 1.62em
		font-family:"FuturaBC";
		margin 1em 0
	&-descMin
		color $gris
		font-size 1.12em
		font-weight 400
		font-family:"MyriadPro";
		margin 0
		
	/*Slider Redondo index*/
		
	&-main
		width 100%
		position relative
	
	&-center
		display inline-block
		margin 10% 0 15%
		width 100%
		max-width 420px
	
	&-round
		width 100%
	&-roundItem
		display inline-block
		width 50%
		max-width 260px
		cursor pointer
		text-align center
		margin 10px 40px
		
		& img
			vertical-align bottom
			width 260px
		
		& .Empre-title
			margin 20px 0
			font-size 1.8em
			
	&-circle
		display inline-block
		width 14%
		max-width 128px
		cursor pointer
		text-align center
		position absolute
		
		& img
			vertical-align bottom
			width 106px
		
		& .Empre-title
			display none
			margin 8px 0
			font-size 1.2em

	/*Circulos slide redondo*/
	&-circle:nth-child(2)
		top 0
		left 22.2%
	&-circle:nth-child(10)
		top 0
		right 22.2%
		
	&-circle:nth-child(3)
		top 22%
		left 7.14%
	&-circle:nth-child(9)
		top 22%
		right 7.14%
	
	&-circle:nth-child(4)
		bottom 30%
		left 9.14%
	&-circle:nth-child(8)
		bottom 30%
		right 9.14%
		
	&-circle:nth-child(5)
		bottom 11%
		left 25%
	&-circle:nth-child(7)
		bottom 11%
		right 25%
	
	&-circle:nth-child(6)
		bottom 4%
		left calc(50% - 7%)
		
	/*Listado "emprendimientos.html"*/
	&-list
		& .Empre-slideItem
			margin 20px
	
	/*Interna "emprendimientos_int.html"*/
	&-int
		width 95%
		margin 0 2.5%
		text-align justify
		
		& .u-subTitle
			font-size 1.62em
		
		& p
			font-size 1.25em
			font-weight 400
			font-family:"MyriadPro";
			color black
		
	&-intImg
		text-align center
	&-intImgAlbum
		display inline-block
		& img
			vertical-align bottom
		
		& figure
			margin 0
	&-intImgItem
		cursor pointer
			
	&-intContact
		text-align center
	&-intContactTxt
		font-family:"MyriadProBC";
		font-weight 700
		font-size 1.87em
		color $verde
		text-align center
		margin 7px 0
		
	&-intContactBtn
		display inline-block
		color $verde
		cursor pointer
		vertical-align middle
		font-family:"MyriadProC";
		font-size 2.4em		
		border 3px solid $verde
		box-sizing border-box
		margin 7px
		text-align center
		height 56px
		line-height 56px
		
		& .icon-chevron-right
			background $verde
			color white
			display inline-block
			vertical-align middle
			width 50px
			height 50px
			line-height 50px
			float right
	&-intContactBtnTxt
		padding 0 25px
		color $verde
		display inline-block
		vertical-align middle
		line-height 50px


/*Contoles Owl*/

.Empre-slide .owl-controls .owl-buttons div
	position absolute
	top 40%
	font-size 3em
	color $verde
	opacity 1
	padding 0
	margin 0
	border-radius inherit
	background transparent
	
.Empre-slide .owl-controls .owl-buttons div span
	vertical-align middle
	display block
	
.Empre-slide .owl-controls .owl-buttons .owl-prev 
	left 0

.Empre-slide .owl-controls .owl-buttons .owl-next
	right 0
	
.Empre-round .owl-controls .owl-buttons div
	position absolute
	top 37%
	font-size 4.5em
	color $verde
	opacity 1
	padding 0
	margin 0
	border-radius inherit
	background transparent
	
.Empre-round .owl-controls .owl-buttons div span
	vertical-align middle
	display block
	
.Empre-round .owl-controls .owl-buttons .owl-prev 
	left 0

.Empre-round .owl-controls .owl-buttons .owl-next
	right 0

@media screen and (min-width:800px)
	.Empre
		&-roundItem
			& .Empre-title
				margin 20px 0
				font-size 2.4em
		&-circle
			& .Empre-title
				display block
				font-size 1em

@media screen and (min-width:932px)
	.Empre
		&-roundItem
			width auto
		&-circle:nth-child(6)
			left calc(50% - 64px)
	
@media screen and (min-width:960px)
	.Empre
		&-circle
			& .Empre-title
				font-size 1.2em

		/*Interna "emprendimientos_int.html"*/
		&-int
			& .u-halfColumn:first-child
				width 50%
				margin-right 2.5%
	
@media screen and (min-width:1100px)
	.Empre
		/*Interna "emprendimientos_int.html"*/
		&-int
			width 100%
			margin 0
	
@media screen and (min-width:1160px)
	.Empre-slide .owl-controls .owl-buttons .owl-prev 
		left -40px

	.Empre-slide .owl-controls .owl-buttons .owl-next
		right -40px
		
	.Empre
		/*Listado "emprendimientos.html"*/
		
		&-list
			margin-bottom 20px